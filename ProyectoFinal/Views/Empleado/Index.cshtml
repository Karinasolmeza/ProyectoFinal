
@model List<Empleado>


@{
}

<h1>Guardar empleado funciona</h1>

<body>
	<div class="container">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2>Manejar <b>Empleados</b></h2>
						</div>
						<div class="col-xs-6">
							<a asp-action="GuardarEmpleado" asp-controller="Empleado" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Crear Empleado</span></a>

						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>

							<th>Id empleado</th>
							<th>Nombre</th>
							<th>Apellido</th>
							
						
							<th>Acción</th>
						</tr>
					</thead>

					@foreach (var item in Model)
					{
					
						<tbody>
						<tr>
							


								<th>@item.id_empleado</th>	
								<th>@item.emple_nombre</th>
								<th>@item.emple_apellido</th>
							
								

								  <td>
									<a asp-action="EditarEmpleado" asp-controller="Empleado" class="edit" asp-route-id="@item.id_empleado"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>
								
									<a asp-action="EliminarEmpleado" asp-controller="Empleado" class="bdanger" asp-route-id="@item.id_empleado"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
								</td>
						</tr>
						</tbody>
					}
				</table>
				
			</div>
		</div>
	</div>
</body>

