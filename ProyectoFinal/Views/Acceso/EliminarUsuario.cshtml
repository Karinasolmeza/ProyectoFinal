@model Usuario
@{
    ViewData["Title"] = "Eliminar Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Usuario Eliminar</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>


<body>
    <h1>Eliminar @Html.DisplayTextFor(m => m.Nombre)</h1>

    <form asp-action="EliminarUsuario" asp-controller="Acceso" method="post">


        <input asp-for="id_usuario" type="hidden" class="form-control" />

        <p>Seguro que quieres eliminar el registro de: @Html.DisplayTextFor(m => m.Nombre)?</p>

        <button type="submit" class="btn-danger">Eliminar</button>

    </form>
</body>
</html>