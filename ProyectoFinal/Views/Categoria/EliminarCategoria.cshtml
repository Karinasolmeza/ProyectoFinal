@model Categoria
@{
    ViewData["Title"] = "Eliminar Categoria";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>


<body>
    <h1>Eliminar @Html.DisplayTextFor(m => m.categ_detalle)</h1>

    <form asp-action="EliminarCategoria" asp-controller="Categoria" method="post">


        <input asp-for="id_categoria" type="hidden" class="form-control" />

        <p>Seguro que quieres eliminar el registro de: @Html.DisplayTextFor(m => m.categ_detalle)?</p>

        <button type="submit" class="btn-danger">Eliminar</button>

    </form>

</body>
</html>