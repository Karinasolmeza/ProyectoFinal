@model Proveedor
@{
    ViewData["Title"] = "Guardar Proveedor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>


<body>
<h1>Guardar Proveedor </h1>

<form asp-action="GuardarProveedor" asp-controller="Proveedor" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Nombre</label>
        <input asp-for="prove_nombre" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Apellido</label>
        <input asp-for="prove_apellido" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Dirección</label>
        <input asp-for="prove_direccion" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label for="exampleInputPassword1">Cuit</label>
        <input asp-for="prove_cuit" type="text" class="form-control">
    </div>
 

    <button name="submit" type="submit" id="guardar-submit" data-submit="...Sending">Submit</button>
  
</form>

</body>
</html>

