@model Proveedor

@{
}

<h1>Editar Producto @Html.DisplayTextFor(m => m.prove_nombre)</h1>

@*//Agregar id y esconderlo*@
<form asp-action="EditarProveedor" asp-controller="Proveedor" method="post">
    <div class="form-group">
        <input asp-for="id_proveedor" type="text" class="form-control" />
        <div class="form-group">
            <label for="exampleInputEmail1">Nombre</label>
            <input asp-for="prove_nombre" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Precio</label>
            <input asp-for="prove_apellido" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Stock</label>
            <input asp-for="prove_direccion" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Detalle</label>
            <input asp-for="prove_cuit" type="text" class="form-control">
        </div>
       
        @*<button type="submit" class="btn btn-primary">Submit</button>*@
        <button name="submit" type="submit" id="guardar-submit" data-submit="...guardando">Guardar</button>
    </div>
</form>

