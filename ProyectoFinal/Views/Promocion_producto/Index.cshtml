@model List<Promocion_producto>


@{
	ViewData["Title"] = "Promociones por Productos";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
	<meta name="viewport" content="width=device-width" />
	<title>Index</title>
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
	


	<div class="container">
		<div class="table-responsive">
			<div class="table-wrapper">
				<div class="table-title">
					<div class="row">
						<div class="col-xs-6">
							<h2>Promos-Productos: Asignar una promo </h2>
						</div>
						<div class="col-xs-6">
							<a asp-action="GuardarPromocionProducto" asp-controller="Promocion_producto" class="btn btn-success"><i class="material-icons">&#xE147;</i> <span>Asignar Detalle</span></a>

						</div>
					</div>
				</div>
				<table class="table table-striped table-hover">
					<thead>
						<tr>


							<th>Promo numero</th>
							<th>Id Promo</th>
							<th>Id Producto</th>
							<th>Fecha inicio</th>
							<th>Fecha fin</th>
							
							<th>Acción</th>

						</tr>
					</thead>

					@foreach (var item in Model)
					{

						<tbody>
							<tr>
								<th>@item.promo_numero</th>
							
								<th>@item.id_promo</th>
								<th>@item.id_producto</th>
								<th>@item.promo_fecha_inicio</th>
								<th>@item.promo_fecha_fin</th>
								


								<td>
									<a asp-action="EditarPromocionProducto" asp-controller="Promocion_producto" class="edit" asp-route-id="@item.promo_numero"><i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i></a>

									<a asp-action="EliminarPromocionProducto" asp-controller="Promocion_producto" class="bdanger" asp-route-id="@item.promo_numero"><i class="material-icons" data-toggle="tooltip" title="Delete">&#xE872;</i></a>
								</td>
							</tr>
						</tbody>
					}
				</table>

			</div>
		</div>
	</div>
</body>

</html>