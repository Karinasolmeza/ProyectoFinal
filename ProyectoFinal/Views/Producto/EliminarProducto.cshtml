@model Producto
@{
}
<h1>Eliminar @Html.DisplayTextFor(m => m.prod_nombre)</h1>

<form asp-action="EliminarProducto" asp-controller="Producto" method="post">


    <input asp-for="id_producto" type="hidden" class="form-control" />

