@model Orden

@{
    ViewData["Title"] = "Editar Orden";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>


<body>
<h1>Editar Orden @Html.DisplayTextFor(m => m.id_orden)</h1>

@*//Agregar id y esconderlo*@
<form asp-action="EditarOrden" asp-controller="Orden" method="post">
    <div class="form-group">
        <input asp-for="id_orden" type="text" class="form-control" />
        <div class="form-group">
            <label for="date">Fecha de generación</label>
            <input asp-for="ord_fecha_de_generacion" type="date" class="form-control">
        </div>
        <div class="form-group">
            <label for="date">Fecha de entrega</label>
            <input asp-for="ord_fecha_entrega" type="date" class="form-control">
        </div>
        <div class="form-group">
            <label for="text">Id Cliente</label>
            <input asp-for="ord_id_cliente" type="text" class="form-control">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Id Empleado</label>
            <input asp-for="ord_id_empleado" type="text" class="form-control">
        </div>
     
        @*<button type="submit" class="btn btn-primary">Submit</button>*@
        <button name="submit" type="submit" id="guardar-submit" data-submit="...guardando">Guardar</button>
    </div>
</form>

</body>
</html>